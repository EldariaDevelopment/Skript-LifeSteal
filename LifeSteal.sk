command /dctimer [<text>] [<number>]:
	trigger:
		if player has permission "Admin":
			set {x} to "NotCancel"
			if args 1 or 2 is "Cancel":
				set {x} to "Cancel"
				set {_n} to 0
			else:
				set {_n} to args 2
				set {_t} to args 1
				loop all players:
					send "&7[ %{ServerName}% &7] Server Restart, Reason: %{_t}%." to loop-players
				loop {_n} times:
					wait 1 second
					if {_x} = "Cancel":
						stop
					else:
						send title "&4%{_n}%" with subtitle "&cServer Restarting In:" to all players
						subtract 1 from {_n}
						if {_n} is 0:
							if {x} = "Cancel":
								stop
							loop all players:
								if player doesn't have permission "admin":
									kick loop-players
